{
  "name": "@soap/monorepo",
  "version": "1.0.0",
  "description": "Secure OAuth2 Authorization Provider",
  "main": "index.js",
  "repository": "github.com/celtech/soap",
  "author": "Tim Hinz <timhinz16@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "concurrently 'yarn lint:style' 'yarn lint:js'",
    "lint:fix": "concurrently 'yarn lint:style' 'yarn lint:js:fix'",
    "lint:js": "eslint --ext \".js,.vue,.ts\" --ignore-path .gitignore .",
    "lint:js:fix": "eslint --ext \".js,.vue,.ts\" --fix --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,vue}\" --ignore-path .gitignore",
    "dev": "yarn build && concurrently 'nx run-many --target=dev --all' 'sleep 1; open-cli http://127.0.0.1:8080'",
    "build": "nx run-many --target=build --all",
    "docker:up": "cd docker && docker compose -p soap up -d --build --force-recreate",
    "docker:down": "cd docker && docker compose -p soap down",
    "docker:build:app": "docker build --build-arg=\"APP_PATH=app\" --target app -t registry.gitlab.com/swarmlet/swarmlet/app:latest -f docker/Vue.Dockerfile .",
    "prepare": "test -n \"$DOCKER\" || node ./.husky/prepare.js"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/eslint-parser": "^7.18.2",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "concurrently": "^7.2.2",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-tailwindcss": "^3.5.2",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lerna": "^5.1.4",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.16",
    "nx": "^14.3.6",
    "open-cli": "^7.0.1",
    "postcss-html": "^1.4.1",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-config-tailwindcss": "^0.0.3"
  },
  "lint-staged": {
    "*.{js,vue}": "yarn lint:js --cache",
    "*.{css,scss,sass,html,vue}": "yarn lint:style --cache"
  }
}
