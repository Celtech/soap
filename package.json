{
  "name": "@soap/monorepo",
  "version": "1.0.0",
  "description": "Secure OAuth2 Authorization Provider",
  "main": "index.js",
  "repository": "github.com/celtech/soap",
  "author": "Tim Hinz <timhinz16@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint:js": "eslint --ext \".js,.vue,.ts\" --ignore-path .gitignore .",
    "lint:fix": "eslint --ext \".js,.vue,.ts\" --fix --ignore-path .gitignore .",
    "dev": "yarn build && concurrently 'nx run-many --target=dev --all' 'sleep 1; open-cli http://127.0.0.1:8080'",
    "build": "nx run-many --target=build --all",
    "build:watch": "nx run-many --target=build --all"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-vue": "^9.1.1",
    "lerna": "^5.1.4",
    "nx": "^14.3.6",
    "open-cli": "^7.0.1",
    "prettier": "^2.7.1"
  }
}
